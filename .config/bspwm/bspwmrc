#!/bin/bash

bspc monitor HDMI-0 -d 1 2 3
bspc monitor DVI-I-1 -d 4 5 6

bspc config border_width          3
bspc config window_gap            10

bspc config split_ratio                 0.5
bspc config borderless_monocle          true
bspc config gapless_monocle             true
bspc config focus_follows_pointer       true
bspc config pointer_motion_interval     60
bspc config focused_border_color        "#00ff00"

bspc rule -a Screenkey manage=off
bspc rule -a Zathura state=tiled
bspc rule -a Thunar state=floating
bspc rule -a Thunderbird desktop='^6' follow=on
bspc rule -a firefox rectangle=1000x800
#bspc rule -a Signal desktop='^6' follow=on

wmname LG3D # Fixes problems with JDK versions assuming a reparenting window manager

~/.config/bspwm/start-apps.sh
